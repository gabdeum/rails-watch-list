<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 mt-4">
      <h2>New list</h2>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name %>
        <%= f.input :cover, as: :file %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
